<div class="container">
    <div class="row">

        <div class="card-consultar-chamado">
            <div class="card">
                <div class="card-header">
                    Consulta de chamado
                </div>

                <div class="card-body">
                    {{#data}}
                    <div id="card-chamado" class="card mb-3 bg-light detalhes-chamado" onclick=location.href='/'>
                        <div class="card-body">
                            <h5 class="card-title">{{titulo}}</h5>
                            <h6 class="card-subtitle mb-2 text-muted">{{categoria}}</h6>
                            <p class="card-text">{{descricao}}</p>
                            <p class="card-text">Status: {{status}}</p>
                        </div>
                    </div>
                    {{/data}}

                    <div class="row mt-5">
                        <div class="col-6">
                            <a class="btn btn-lg btn-warning btn-block" href="/">Voltar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>