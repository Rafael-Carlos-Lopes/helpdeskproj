<div class="container">
    <div class="row">

        <div class="card-abrir-chamado">
            <div class="card" style="border-radius: 15px; box-shadow: 5px 10px 10px rgb(1 0 0 / 0.3);">
                <div class="card-body">
                    <div class="row">
                        <div class="col">

                            <form name='formCriarUsuario' id="formCriarUsuario" action='controllerAbrirChamado'
                                method='post'>
                                <div class="form-group row">
                                    <label class="col-2">Matrícula</label>
                                    <input name="matricula" id="matricula" type="text" class="form-control col-9"
                                        placeholder="Matrícula" style="border-radius: 15px; color: #007bff;">
                                </div>

                                <div class="form-group row">
                                    <label class="col-2">Nome</label>
                                    <input name="nome" id="nome" type="text" class="form-control col-9"
                                        placeholder="Nome" style="border-radius: 15px; color: #007bff;">
                                </div>

                                <div class="form-group row">
                                    <label class="col-2">Cpf</label>
                                    <input name="cpf" id="cpf" type="text" class="form-control col-9"
                                        placeholder="Cpf" style="border-radius: 15px; color: #007bff;">
                                </div>

                                <div class="form-group row">
                                    <label class="col-2">Email</label>
                                    <input name="email" id="email" type="text" class="form-control col-9"
                                        placeholder="Email" style="border-radius: 15px; color: #007bff;">
                                </div>

                                <div class="form-group row">
                                    <label class="col-2">Telefone</label>
                                    <input name="telefone" id="telefone" type="text" class="form-control col-9"
                                        placeholder="Telefone" style="border-radius: 15px; color: #007bff;">
                                </div>

                                <div class="row">
                                    <div class="col-2">
                                        <a class="btn btn-sm btn-block botao-cria-chamado" href="/"
                                            style="background: white; border-radius: 50px; line-height: 1; border-color: #007bff; color: #007bff;">Cancela</a>
                                    </div>
                                    <div class="col-2">
                                        <button class="btn btn-sm btn-block botao-cria-chamado"
                                            style="background: white; border-radius: 50px; line-height: 1; border-color: #007bff; color: #007bff;"
                                            type="submit" value="add">Confirma</button>
                                    </div>
                                </div>
                            </form>

                            <div class="resultado">Usuário criado com sucesso</div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>