<div class="container">
    <div class="row">

        <div class="card-abrir-chamado">
            <div class="card" style="border-radius: 15px; box-shadow: 5px 10px 10px rgb(1 0 0 / 0.3);">
                <div class="card-body">
                    <div class="row">
                        <div class="col">

                            <form name='formAlterarSenha' id="formAlterarSenha" action='controllerAlterarSenha'
                                method='post'>
                                <div class="form-group">
                                    <label style="color: #007bff; font-weight: 500;">Senha atual</label>
                                    <input name="senha" id="senha" type="password" class="form-control col-12"
                                        style="border-radius: 15px; color: #007bff; background: #bee6f7;">
                                </div>

                                <div class="form-group">
                                    <label style="color: #007bff; font-weight: 500;">Nova senha</label>
                                    <input name="novaSenha" id="novaSenha" type="password" class="form-control col-12"
                                        style="border-radius: 15px; color: #007bff; background: #bee6f7;">
                                </div>

                                <div class="form-group">
                                    <label style="color: #007bff; font-weight: 500;">Confirme a nova senha</label>
                                    <input name="senhaConfirmada" id="senhaConfirmada" type="password"
                                        class="form-control col-12"
                                        style="border-radius: 15px; color: #007bff; background: #bee6f7;">
                                </div>

                                <div class="row">
                                    <div class="col-2">
                                        <a class="btn btn-sm btn-block botao-cria-chamado" href="/"
                                            style="background: white; border-radius: 50px; line-height: 1; border-color: #007bff; color: #007bff;">Cancela</a>
                                    </div>
                                    <div class="col-2">
                                        <button class="btn btn-sm btn-block botao-cria-chamado"
                                            style="background: white; border-radius: 50px; line-height: 1; border-color: #007bff; color: #007bff;"
                                            type="submit" value="add">Confirma</button>
                                    </div>
                                </div>

                                <div style="text-align: center; color: #007bff;">
                                    {{textoAviso}}
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>